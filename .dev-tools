const login = async(username, password)=>{
    return (await fetch('/api/dashboard/login',{
        method:'POST',
        body: JSON.stringify({
            username,
            password
        }),
        headers: {'Content-type': 'application/json'}})).json()
}

const logout = async(username, password)=>{
    return (await fetch('/api/dashboard/logout',{
        method:'POST',
        headers: {'Content-type': 'application/json'}})).json()
}

const createBlogPost = async(title, details) => {
    return (await fetch('/api/blog/posts',{
        method:'POST',
        body: JSON.stringify({
            title,
            details
        }),
        headers: {'Content-type': 'application/json'}})).json()
}

const updateBlogPost = async(title, details,pid) => {
    return (await fetch(`/api/blog/post/${pid}`,{
        method:'PUT',
        body: JSON.stringify({
            title,
            details
        }),
        headers: {'Content-type': 'application/json'}})).json()
}

const deleteBlogPost = async(pid) => {
    return (await fetch(`/api/blog/post/${pid}`,{
        method:'DELETE',
        headers: {'Content-type': 'application/json'}})).json()
}